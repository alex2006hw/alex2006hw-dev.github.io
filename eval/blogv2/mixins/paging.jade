mixin paging()
    nav.paging.pure-g-r
        if prevPage
            a.pure-u-1-2(href=prevPage.url)
                div.ah-icon-link.newer.left
                    span.text.text-right Newer posts
                    img.ah-icon.ah-icon-left(src="/svg/previous.svg")
        else
            span.pure-u-1-2.left
        //
            a.pure-u-1-3.center(href='/timeline/')
            div.icon-link.archive.center
                span.text.text-right Archives
                img.icon.icon-left(src="/svg/timeline.svg")
        if nextPage
            a.pure-u-1-2(href=nextPage.url)
                div.ah-icon-link.older.right
                    span.text.text-left Older posts
                    img.ah-icon.ah-icon-right(src="/svg/next.svg")
        else
            span.pure-u-1-2.right

        //
         a.icon-link.back
            img.icon(src="/svg/previous.svg")
            div.text TO FULL BLOG
