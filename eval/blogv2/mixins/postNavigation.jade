mixin postNavigation(prevLabel, prevUrl, nextLabel, nextUrl)
    nav.paging.pure-g-r
        if prevUrl
            a.pure-u-1-2(href=prevUrl)
                div.ah-icon-link.newer.left
                    span.text.text-right #{prevLabel}
                    img.ah-icon.ah-icon-left(src="/svg/previous.svg")
        else
            span.pure-u-1-2.left
        if nextLabel
            a.pure-u-1-2(href=nextUrl)
                div.ah-icon-link.older.right
                    span.text.text-left #{nextLabel}
                    img.ah-icon.ah-icon-right(src="/svg/next.svg")
        else
            span.pure-u-1-2.right
